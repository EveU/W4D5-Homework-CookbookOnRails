<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :category_id, "Category" %>
  <%= f.collection_select(:category_id, @categories, :id, :name, prompt: "Select category") %>
  <br>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <br>
  <%= f.label :ingredients %>
  <%= f.text_area :ingredients %>
  <br>
  <%= f.label :method %>
  <%= f.text_area :method %>
  <br>
  <%= f.submit 'Create Recipe!' %>
<% end %>